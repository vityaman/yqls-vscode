{
	"compilerOptions": {
		"target": "ES2024",
		"lib": [
			"ES2024",
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "out",
		"rootDir": "src",
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
        "paths": {
            "@assets/*": ["../assets/*"],
        }
	},
	"include": [
		"src",
		"src/symbolTable"
	],
	"exclude": [
		"node_modules",
	],
}